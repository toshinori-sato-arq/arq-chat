# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

+ nocsrf
GET     /debug/users                jp.androbo.quick.chat.web.controller.debug.DebugController.users

+ nocsrf
GET     /debug/auth_users           jp.androbo.quick.chat.web.controller.debug.DebugController.authenticatedUsers

+ nocsrf
POST    /api/v1/signup              jp.androbo.quick.chat.web.controller.sign_up.SignUpController.signUp

+ nocsrf
POST    /api/v1/login               jp.androbo.quick.chat.web.controller.login.LoginController.login

+ nocsrf
DELETE  /api/v1/logout              jp.androbo.quick.chat.web.controller.logout.LogoutController.logout

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
